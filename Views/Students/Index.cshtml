@model IEnumerable<Assign1.Models.Student>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Students</title>
</head>
<body>
<h1>Students</h1>
<p class="mt-4">
    <a asp-action="Create" class="btn btn-info rounded-pill">
        Create New
    </a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th class="font-weight-normal">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th class="font-weight-normal">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th class="font-weight-normal">
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            <th class="font-weight-normal">
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th class="font-weight-normal">
                @Html.DisplayNameFor(model => model.CityOfResidence)
            </th>
            <th class="font-weight-normal">
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th class="font-weight-normal border-left">
                Controls
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="border-bottom">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityOfResidence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td class="border border-secondary border-right-0 border-bottom-0 border-top-0">
                <a asp-action="Details" asp-route-id="@item.StudentId" class="text-info">
                    Details
                </a> 
                <span class="text-secondary">
                    |
                </span>
                <a asp-action="Edit" asp-route-id="@item.StudentId" class="text-warning">
                    Edit
                </a>
                <span class="text-secondary">
                    |
                </span>
                <a asp-action="Delete" asp-route-id="@item.StudentId" class="text-danger">
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
